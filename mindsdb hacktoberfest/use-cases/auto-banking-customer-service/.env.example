# ====================================================================
# AutoBankingCustomerService - Environment Configuration
# ====================================================================
# Copy this file to .env and fill in your actual values
# Usage: cp .env.example .env

# --------------------------------------------------------------------
# Docker Configuration (for docker-compose)
# --------------------------------------------------------------------
POSTGRES_VERSION=latest
MINDSDB_VERSION=latest

# --------------------------------------------------------------------
# MindsDB Configuration
# --------------------------------------------------------------------
MINDSDB_URL=http://127.0.0.1:47334

# --------------------------------------------------------------------
# OpenAI Configuration (Required for AI Agents)
# --------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# --------------------------------------------------------------------
# PostgreSQL Database Configuration
# --------------------------------------------------------------------
# Note: These values are used by BOTH:
# 1. docker-compose.yml (for Docker containers)
# 2. app/db.py (for application connection)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demo
DB_USER=postgresql
DB_PASSWORD=psqlpasswd
DB_SCHEMA=demo_data
DB_TABLE=conversations_summary

# --------------------------------------------------------------------
# Jira Integration (Optional)
# --------------------------------------------------------------------
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=BCS
JIRA_ISSUE_TYPE=Task
JIRA_LABELS=customer-service,auto-banking

# --------------------------------------------------------------------
# Salesforce Integration (Optional)
# --------------------------------------------------------------------
SALESFORCE_USERNAME=your-salesforce-username@example.com
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-security-token
SALESFORCE_DOMAIN=login  # Use 'test' for sandbox, 'login' for production

# --------------------------------------------------------------------
# Confluence Knowledge Base (Optional)
# --------------------------------------------------------------------
CONFLUENCE_BASE_URL=https://your-domain.atlassian.net/wiki
CONFLUENCE_EMAIL=your-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token
CONFLUENCE_SPACE_KEY=DOCS
